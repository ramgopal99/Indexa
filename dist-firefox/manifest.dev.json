{
  "manifest_version": 3,
  "name": "Indexa (Dev)",
  "version": "1.0.0",
  "description": "Development version - Automatically indexes and highlights topics from ChatGPT conversations",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "http://localhost/*",
        "file:///*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "http://localhost/*",
        "file:///*"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Indexa (Dev)"
  },
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
